# Range Bot Environment Configuration
# Copy this file to .env and fill in your credentials

# ========== Binance API Configuration ==========
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET_KEY=your_testnet_secret_key_here
BINANCE_TESTNET=True

# ========== Telegram Notifications ==========
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ========== Range Bot Core Parameters ==========
RANGE_LEVERAGE=7
RANGE_MARGIN_PER_TRADE=10.0
RANGE_MAX_OPEN_POSITIONS=3
RANGE_SCAN_INTERVAL=300

# ========== Range Detection Parameters ==========
RANGE_MIN_WIDTH=0.035
RANGE_MIN_TOUCHES=3
RANGE_MAX_AGE_HOURS=168
RANGE_VOLUME_WEIGHT=0.3

# ========== Risk Management ==========
RANGE_MIN_SL_DISTANCE=0.008
RANGE_MIN_RR_RATIO=2.0
RANGE_MAX_POSITIONS_PER_SYMBOL=1
RANGE_SL_BUFFER=0.008
RANGE_TP_BUFFER=0.008

# ========== Quality Filters ==========
RANGE_MIN_QUALITY=B
RANGE_ALLOW_FALSE_BREAKOUTS=False
RANGE_MAX_FALSE_BREAKOUTS=0

# ========== Multi-Timeframe Confirmation ==========
RANGE_USE_HTF_CONFIRMATION=True
RANGE_HTF_TIMEFRAME=1h
RANGE_HTF_MIN_OVERLAP=0.7

# ========== Near-Miss Signal Monitoring (v12.1) ==========
RANGE_NEAR_MISS_ENABLED=True
RANGE_NEAR_MISS_THRESHOLD_PERCENT=0.90    # Signals within 90% of requirements
RANGE_NEAR_MISS_MAX_ACTIVE=20             # Max concurrent WebSocket subscriptions
RANGE_NEAR_MISS_TTL_MINUTES=10            # Signal expiration time
RANGE_NEAR_MISS_CHECK_INTERVAL=30         # Recheck interval in seconds

# ========== Database ==========
DATABASE_PATH=data/chimerabot.db

# ========== Logging ==========
LOG_LEVEL=INFO
LOG_FILE=logs/range_bot.log
