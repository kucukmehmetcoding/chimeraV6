# ChimeraBot Environment Variables
# Coolify'da bu değerleri Environment Variables bölümünden set edin

# ======================
# BINANCE API (ZORUNLU)
# ======================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# ======================
# TELEGRAM (ZORUNLU)
# ======================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ======================
# REDDIT API (OPSİYONEL)
# ======================
# Reddit sentiment analizi için gerekli
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ChimeraBot/1.0

# ======================
# GOOGLE GEMINI (OPSİYONEL)
# ======================
# News sentiment analizi için gerekli
GEMINI_API_KEY=your_gemini_api_key

# ======================
# DATABASE (OPSİYONEL)
# ======================
# Varsayılan: SQLite (/app/data/chimerabot.db)
# PostgreSQL için: postgresql://user:password@host:5432/dbname
# DATABASE_URL=sqlite:///data/chimerabot.db

# ======================
# TRADING PARAMETERS
# ======================
# Test modu (False = LIVE TRADING with real money!)
BINANCE_TESTNET=False

# Korelasyon bazlı rejim seçimi (v7.0)
# 0.7'den yüksek korelasyonlu coinler BTC'nin rejimini takip eder
# 0.7'den düşük olanlar kendi ADX/BBW verilerine göre karar verir
BTC_CORRELATION_THRESHOLD=0.7
